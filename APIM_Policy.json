{
    "properties": {
        "displayName": "Allowed APIM service tiers",
        "policyType": "Custom",
        "mode": "All",
        "parameters": {
            "allowedSkus": {
                "type": "Array",
                "metadata": {
                    "displayName": "Allowed SKU",
                    "description": "The list of allowed sku for API-M resources."
                }
            }
        },
        "policyRule": {
            "if": {
                "not": {
                    "field": "Microsoft.ApiManagement/service/sku.name",
                    "in": "[parameters('allowedSkus')]"
                }
            },
            "then": {
                "effect": "deny"
            }
        }
    },
