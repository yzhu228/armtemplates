{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmname": {
            "type": "string",
            "defaultValue": "az104-07-vm0"
        },
        "vmadminuser" : {
            "type": "string",
            "defaultValue": "yzhu"
        },
        "vmadminpassword": {
            "type": "securestring"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "az104-05-vnet0",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.70.0.0/22"
                    ]
                },
                "subnets": [
                    {
                        "name": "Subnet0",
                        "properties": {
                            "addressPrefix": "10.70.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('vmname'),'-PublicIP')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(concat(parameters('vmname'), 'yz092'))]"
                }
            }
        },
        {
            "name": "[concat(parameters('vmname'),'-Nsg')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "nsgRule1",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('vmname'),'-NetworkInterface')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'windowsVM1-PublicIP')]",
                "[resourceId('Microsoft.Network/virtualNetworks', 'az104-05-vnet0')]"
            ],
            "tags": {
                "displayName": "windowsVM1 Network Interface"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmname'),'-PublicIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'az104-05-vnet0', 'Subnet0')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "Id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('vmname'),'-Nsg'))]"
                }
            }
        },
        {
            "name": "[parameters('vmname')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'windowsVM1-NetworkInterface')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "osProfile": {
                    "computerName": "[parameters('vmname')]",
                    "adminUsername": "[parameters('vmadminuser')]",
                    "adminPassword": "[parameters('vmadminpassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmname'), 'OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmname'),'-NetworkInterface'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}

