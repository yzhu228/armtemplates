{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmNameBase": {
            "type": "string",
            "defaultValue": "az104WinVm"
        },
        "numberOfVm": {
            "type": "int",
            "defaultValue": 1
        }
    },
    "resources": [
        {
            "name": "linkedNic",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "vnic.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "numberOfVm": {
                        "value": "[parameters('numberOfVm')]"
                    }
                }
            }
        },
        {
            "name": "linkedStorage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "storage.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[concat(parameters('vmNameBase'), copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "multipleVms",
                "count": "[parameters('numberOfVm')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2_v3"
                },
                "osProfile": {
                    "computerName": "windowsVM1",
                    "adminUsername": "yzhu",
                    "adminPassword": "Insuit-46-meant-29"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "windowsVM1OSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[reference('linkedNic').outputs.nicIds.value[0]]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference('linkedStorage').outputs.storageAccountIds.value[0]]"
                    }
                }
            }
        }
    ]
}